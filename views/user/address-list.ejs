<h1>Liste des adresses</h1>

<a href="/user/address/<%= userId %>/add" class="btn btn-success">
  <i class="bi bi-plus-circle-fill"></i> ajouter une adresse
</a>
<% if(typeof(addresses) === 'undefined' || addresses.length === 0) { %>
  <div class="alert alert-secondary" role="alert">
    cet utilisateur n'a pas d'adresse
  </div>
<% } else if(typeof(addresses) !== 'undefined') { %>

  <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Rue</th>
          <th scope="col">Numero</th>
          <th scope="col">Pays</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% addresses.forEach((address, index) => { %>
          <tr>
            <th scope="row"><%= index+1 %></th>
            <td><%= address.street %></td>
            <td><%= address.number %></td>
            <td><%= address.country %></td>
            <td>
              <a href="/user/address/<%= userId %>/remove?id=<%= address.id %>"
                onclick="confirm('Voulez-vous vraiment supprimer cette adresse ?');"
                class="btn btn-danger">
                <i class="bi bi-trash-fill"></i>
              </a>
              &nbsp;
              
              <a href="/user/address/<%= userId %>/edit?id=<%= address.id %>" class="btn btn-primary">
                <i class="bi bi-pen-fill"></i>
              </button>
            </td>
          </tr>
        <% }) %>
      </tbody>
  </table>

<% } %>