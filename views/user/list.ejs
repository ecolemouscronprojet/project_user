<h1>Liste des utilisateurs</h1>


<% if(users.length === 0) { %>
  <div class="alert alert-secondary" role="alert">
    Vous n'avez pas d'utilisateur !
  </div>
<% } else { %>

  <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Pr√©nom</th>
          <th scope="col">Nom</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach((user, index) => { %>
          <tr>
            <th scope="row"><%= index+1 %></th>
            <td><%= user.firstname %></td>
            <td><%= user.lastname %></td>
            <td>
              <a href="/user/remove?id=<%= user.id %>">Supprimer</a>&nbsp;
              <a href="/user/update?id=<%= user.id %>">Modifier</a>
              <a href="/user/address/<%= user.id %>">Gestion adresses</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
  </table>

<% } %>